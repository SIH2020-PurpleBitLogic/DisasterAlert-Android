<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Event Report">
    </TextView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Type of Event:">
        </TextView>
        <Spinner
            android:id="@+id/spinnerReportType"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Number of people affected:">
        </TextView>
        <EditText
            android:id="@+id/textReportNumberPeople"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:hint="Number of people affected"
            android:inputType="number" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Description:">
        </TextView>
        <EditText
            android:id="@+id/textReportDesc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textMultiLine"
            android:gravity="top"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Add a Photo/Video">
        </Button>

    </LinearLayout>


</LinearLayout>